!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "发财"

    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"
    = yield :custom_assets

  %body{class: [controller_name, "skin-blue", "sidebar-mini"].join(" ") }
    .wrapper{style: 'min-height: 960px'}
      %header.main-header
        %a.logo{href: root_path}
          %span.logo-mini

          %span.logo-lg
            = image_tag "", height: 28
            = "微商帮手"
        %nav.navbar.navbar-static-top
          %a.sidebar-toggle{role: 'button', data: {'toggle': 'push-menu' }}
            %span.sr-only
          .container-fluid
            %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar

            .navbar-collapse.collapse.navbar-responsive-collapse
              %ul.nav.navbar-nav.navbar-right
                %li{class: navbar_nav_active_class(:system) }= link_to t('nav.system'), root_path
                = drop_down fa_icon(:user) + " #{current_user.display}" do
                  = menu_item t('nav.setting'), root_path
                  = menu_item t('nav.audits'), root_path
                  = menu_item t('nav.logout'), destroy_user_session_path, method: :delete


      %aside.main-sidebar
        %section.sidebar
          %ul.sidebar-menu.tree{data: { widget: 'tree' }}
            %li.header= t("nav.features")
            = sidebar_li_helper :dashboard, :home, t("nav.dashboard"), root_path, false, {"red": "new"}
            = sidebar_li_helper :services, :bars, t("nav.services"), root_path
            = sidebar_li_helper :pods, :server, t("nav.pods"), root_path
            = sidebar_li_helper :service_templates, 'shopping-bag', t("nav.service_templates"), root_path
            = sidebar_li_helper :namespaces, :copy, t("nav.namespaces"), root_path, false
            = sidebar_li_helper :hosts, :server, t("nav.nodes"), root_path, false
            %li.header= t("nav.other")
            = sidebar_li_helper :system, :gears, t("nav.system"), root_path, true do
              %ul.treeview-menu
                = sidebar_li_helper :mesos, 'circle-thin', t("nav.mesos"), root_path, false, {}, "text-red"

      .content-wrapper
        .content-header
          .margin-bottom
            = bootstrap_flash
          - if need_breadcrumb
            = render :partial => "widgets/breadcrumb"

        .content
          .row
            = yield

      %footer.main-footer
        %p &copy; Company 2017

